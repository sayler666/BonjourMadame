<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:Circle="http://schemas.android.com/apk/res-auto"
             xmlns:ActionButton="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/scene_base"

        >
    <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:background="@color/mainColor"
            android:translationZ="5dp"
            android:elevation="5dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">
    </Toolbar>
    <ImageView
            android:id="@+id/loadedMadameImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    <com.sayler.bonjourmadame.widget.CircularReveal
            android:id="@+id/circural_reveal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            Circle:barColor="@color/backgroundColor"
            />

    <RelativeLayout
            android:id="@+id/mainContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            >
        <com.sayler.bonjourmadame.widget.MainActionButton
                android:id="@+id/actionButton"
                ActionButton:actionIcon="@android:drawable/ic_input_add"
                ActionButton:actionBackground="@drawable/oval"
                ActionButton:diameter="@dimen/diameter"
                style="@style/actionButtonStyle"/>
    </RelativeLayout>

</FrameLayout>
