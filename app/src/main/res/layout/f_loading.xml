<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:Circle="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/scene_base"

        >
    <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/abc_action_bar_default_height_material"
            android:background="@color/amber"
            android:translationZ="5dp"
            android:elevation="5dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">
    </Toolbar>
    <com.sayler.bonjourmadame.widget.CircularReveal
            android:id="@+id/circural_reveal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            Circle:barColor="@color/amberBackground"
            />

    <RelativeLayout
            android:id="@+id/mainContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            >
        <RelativeLayout
                android:id="@+id/button_container"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/add_button_margin"
                android:layout_marginEnd="@dimen/add_button_margin"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:padding="10dp">
            <ImageButton
                    android:id="@+id/action_button"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/diameter"
                    android:layout_height="@dimen/diameter"
                    android:src="@android:drawable/ic_input_add"
                    android:tint="@android:color/white"
                    android:background="@drawable/oval"
                    android:elevation="@dimen/elevation_low"
                    android:stateListAnimator="@anim/button_elevation"/>
            <ProgressBar
                    android:id="@+id/progress_bar_circle"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/diameter"
                    android:layout_height="@dimen/diameter"
                    android:elevation="@dimen/elevation_high"
                    android:translationZ="1dp"
                    style="@style/Base.Widget.AppCompat.ProgressBar"
                    />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>
