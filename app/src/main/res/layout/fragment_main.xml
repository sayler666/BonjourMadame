<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:Circle="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/scene_base"
             tools:context=".Main$PlaceholderFragment"

        >
    <com.sayler.lpreview.CircularReveal
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            Circle:barColor="#78909C"
            />

    <RelativeLayout
            android:id="@+id/mainContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:fitsSystemWindows="false">
        <ImageButton
                android:id="@+id/add_button"
                android:layout_width="@dimen/diameter"
                android:layout_height="@dimen/diameter"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/add_button_margin"
                android:layout_marginEnd="@dimen/add_button_margin"
                android:src="@android:drawable/ic_input_add"
                android:tint="@android:color/white"
                android:background="@drawable/oval"
                android:elevation="@dimen/elevation_low"
                android:stateListAnimator="@anim/button_elevation"/>
        <ImageButton
                android:id="@+id/add_button_1"
                android:layout_width="@dimen/diameter"
                android:layout_height="@dimen/diameter"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/add_button_margin"
                android:layout_marginEnd="@dimen/add_button_margin"
                android:layout_toLeftOf="@id/add_button"
                android:src="@android:drawable/ic_input_add"
                android:tint="@android:color/white"
                android:background="@drawable/oval"
                android:elevation="0dp"
                android:visibility="invisible"
                android:stateListAnimator="@anim/button_elevation"
                />
    </RelativeLayout>
</FrameLayout>
